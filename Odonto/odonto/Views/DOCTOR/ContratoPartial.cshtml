@model odonto.Models.DoctorViewModel

<div id="mensaje-error-contrato"></div>
@using (Html.BeginForm("CreateContrato", "DOCTOR", null, FormMethod.Post, new { @class = "well", @style = "margin-top: 40px;", @id = "crear-contrato" }))
{
    <fieldset>
        <legend>Contratos</legend>
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_ASEGURADORA, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.ID_ASEGURADORA, Model.listaSeguros, htmlAttributes: new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.ID_ASEGURADORA, "", new { @class = "text-danger" })
                            <input type="hidden" id="ID" name="ID" value="@Model.ID"/>
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FECHA_INICIO, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8" style="padding-right:18px;">
                        <div class="input-group date">
                            @Html.EditorFor(model => model.FECHA_INICIO, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/aaaa" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FECHA_FIN, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8" style="padding-right:18px;">
                        <div class="input-group date">
                            @Html.EditorFor(model => model.FECHA_FIN, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/aaaa" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4">
                            <input type="submit" value="Crear" class="btn btn-default" />
                        </div>
                    </div>
            </div>
            <div class="col-md-1" style="padding-left: 0; margin-top: 4%;">
                <a class="btn btn-success" id="agregarContrato">Agregar <i class="glyphicon glyphicon-arrow-right"></i></a>
            </div>
            <div class="col-md-6">
                <table class="table" id="tablaContrato">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha de Inicio</th>
                            <th>Fecha Fin</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
                
        </div>
</fieldset>
}
