@model IEnumerable<odonto.Models.DOCTOR>

@{
    ViewBag.Title = "Index";
}

<h2>Doctor</h2>

<p>
    @Html.ActionLink("Nuevo Doctor", "Create")
</p>
<table id="table-enfemedad" style="text-align:center;" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">
                Primer Nombre
            </th>
            <th style="text-align: center;">
                Segundo Nombre
            </th>
            <th style="text-align: center;">
                Primer Apellido
            </th>
            <th style="text-align: center;">
                Segundo Apellido
            </th>
            <th style="text-align: center;">
                Login
            </th>
            <th style="text-align: center;">
                Correo Electronico
            </th>
            <th style="text-align: center;">
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th style="text-align: center;">
                Primer Nombre
            </th>
            <th style="text-align: center;">
                Segundo Nombre
            </th>
            <th style="text-align: center;">
                Primer Apellido
            </th>
            <th style="text-align: center;">
                Segundo Apellido
            </th>
            <th style="text-align: center;">
                Login
            </th>
            <th style="text-align: center;">
                Correo Electronico
            </th>
            <th style="text-align: center;">
                Rol
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEGUNDO_NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEGUNDO_APELLIDO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LOGIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ROL.NOMBRE)
                </td>
                <td style="width: 76px;">
                    <a href="/DOCTOR/Edit/@item.ID" style="color:#190;"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/DOCTOR/Details/@item.ID"><i class="glyphicon glyphicon-search"></i></a>
                    <a href="/DOCTOR/Delete/@item.ID" style="color:#e11;"><i class="glyphicon glyphicon-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
