@model IEnumerable<odonto.Models.CITA>

@{
    ViewBag.Title = "Index";
}

<h2>Cita</h2>

<p>
    @Html.ActionLink("Nueva Cita", "Create")
</p>
<table id="table-paciente" style="text-align:center;" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">
                Doctor
            </th>
            <th style="text-align: center;">
                Paciente
            </th>
            <th style="text-align: center;">
                Estatus
            </th>
            <th style="text-align: center;">
                Fecha
            </th>
            <th style="text-align: center;">
                Acción
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th style="text-align: center;">
                Doctor
            </th>
            <th style="text-align: center;">
                Paciente
            </th>
            <th style="text-align: center;">
                Estatus
            </th>
            <th style="text-align: center;">
                Fecha
            </th>
            <th style="text-align: center;">
                Acción
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DOCTOR.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PACIENTE.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTATUS)
                </td>
                <td>
                    @item.FECHA.ToString("dd-MM-yyyy HH:MM")
                </td>
                <td style="width: 76px;">
                    <a href="/CITA/Detalle/@item.ID"><i class="glyphicon glyphicon-list-alt"></i></a>
                    <a href="/CITA/Edit/@item.ID" style="color:#190;"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/CITA/Details/@item.ID"><i class="glyphicon glyphicon-search"></i></a>
                    <a href="/CITA/Delete/@item.ID" style="color:#e11;"><i class="glyphicon glyphicon-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
