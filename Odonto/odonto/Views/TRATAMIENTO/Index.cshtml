@model IEnumerable<odonto.Models.TRATAMIENTO>

@{
    ViewBag.Title = "Tratamiento";
}

<h2>Tratamiento</h2>

<p>
    @Html.ActionLink("Nuevo Tratamiento", "Create")
</p>
<table id="table-tratamiento" style="text-align:center;" class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Estatus
            </th>
            <th>Monto</th>
            <th></th>
        </tr>
    </thead>
   <tfoot>
       <tr>
           <th>
               Nombre
           </th>
           <th>
               Descripcion
           </th>
           <th>
               Estatus
           </th>
           <th>Monto</th>
           <th></th>
       </tr>
   </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESCRIPCION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTATUS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MONTO)
                </td>
                <td>
                    <a href="/TRATAMIENTO/Edit/@item.ID" style="color:#190;"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="/TRATAMIENTO/Details/@item.ID"><i class="glyphicon glyphicon-search"></i></a>
                    <a href="/TRATAMIENTO/Delete/@item.ID" style="color:#e11;"><i class="glyphicon glyphicon-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
