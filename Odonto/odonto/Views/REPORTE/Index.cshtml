@model odonto.Models.ReporteViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte</h2>
<div class="well" style = "margin-top: 40px;">
   
    <fieldset>
        <legend>Datos del Reporte</legend>
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px;">
                    <div class="form-group">
                        @Html.LabelFor(model => model.idReporte, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.idReporte, Model.listaReporte,"Seleccione..", htmlAttributes: new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.listaReporte, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div id="div-fechas" class="col-md-12 div-reporte" style="display:none;">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fechaInicio, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7" style="padding-right:35px;">
                                <div class="input-group date">
                                    @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/aaaa" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fechaFin, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7" style="padding-right:35px;">
                                <div class="input-group date">
                                    @Html.EditorFor(model => model.fechaFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "dd/mm/aaaa" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div-paciente" class="col-md-12 div-reporte" style="display:none;">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.idPaciente, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.idPaciente, Model.listaPacientes, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.listaPacientes, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div-seguro" class="col-md-12 div-reporte" style="display:none;">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.idSeguro, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.idSeguro, Model.listaSeguros, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.listaSeguros, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div-tratamiento" class="col-md-12 div-reporte" style="display:none;">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.idTrata, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                               @Html.DropDownListFor(m => m.idTrata, Model.listaTratamientos, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.listaTratamiento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style="padding-left: 80px; margin-top: 20px;">
                    <a id="cargarReporte" class="btn btn-primary">Cargar Reporte</a>
                </div>
            </div>
        </div>
    </fieldset>        
</div>
<div id="reporte" class="well" style="height:400px; display:none;" data-visual="0">
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12" style="height:360px;">
                <div class="col-md-12" style="background-color:#ffffff; height:100%;">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 id="titulo" style="text-align:center;"></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

